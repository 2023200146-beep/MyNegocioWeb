<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Categorías - My Negocio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-category { transition: transform 0.2s; }
        .card-category:hover { transform: translateY(-5px); }
        .stats-number { font-size: 1.5rem; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Consulta de Categorías</h1>
                
        
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Categorías de Productos</h5>
                        <a href="/" class="btn btn-secondary">Volver al inicio</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% categorias.forEach(categoria => { %>
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card card-category h-100">
                                        <div class="card-header">
                                            <h6 class="mb-0"><%= categoria.NombreCategoria %></h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text"><%= categoria.Descripcion %></p>
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <small class="text-muted">Productos</small>
                                                    <div class="fw-bold text-primary"><%= categoria.CantidadProductos || 0 %></div>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Stock</small>
                                                    <div class="fw-bold text-success"><%= categoria.StockTotal || 0 %></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button class="btn btn-sm btn-outline-primary w-100"
                                                    onclick="verProductosCategoria('<%= categoria.IdCategoria %>', '<%= categoria.NombreCategoria %>')">
                                                Ver Productos
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <% if (productosCategoria && productosCategoria.length > 0) { %>
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Productos de: <%= categoriaSeleccionada %></h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Producto</th>
                                            <th>Presentación</th>
                                            <th>Precio</th>
                                            <th>Stock</th>
                                            <th>Valor Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% productosCategoria.forEach(producto => { %>
                                            <tr>
                                                <td><%= producto.IdProducto %></td>
                                                <td><strong><%= producto.NombreProducto %></strong></td>
                                                <td><%= producto.CantidadPorUnidad %></td>
                                                <td>S/ <%= producto.PrecioUnidad %></td>
                                                <td>
                                                    <span class="badge <%= producto.UnidadesEnExistencia > 10 ? 'bg-success' : 'bg-warning' %>">
                                                        <%= producto.UnidadesEnExistencia %>
                                                    </span>
                                                </td>
                                                <td><strong>S/ <%= (producto.PrecioUnidad * producto.UnidadesEnExistencia).toFixed(2) %></strong></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function verProductosCategoria(idCategoria, nombreCategoria) {
            window.location.href = `/consulta-categorias?categoria=${idCategoria}&nombre=${encodeURIComponent(nombreCategoria)}`;
        }
    </script>
</body>
</html>