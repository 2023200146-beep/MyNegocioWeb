<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos por Cliente - My Negocio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .pagination { justify-content: center; margin-top: 20px; }
        .table-hover tbody tr:hover { background-color: #f8f9fa; }
        .badge { font-size: 0.75em; }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">游논 Pedidos por Cliente</h1>
                
                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Filtros de B칰squeda</h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label for="cliente" class="form-label">Cliente</label>
                                <select class="form-control" id="cliente" name="cliente">
                                    <option value="">Todos los clientes</option>
                                    <% if (clientes && clientes.length) { %>
                                        <% clientes.forEach(cli => { %>
                                            <option value="<%= cli.IdCliente %>" <%= cli.IdCliente == clienteFiltro ? 'selected' : '' %>>
                                                <%= cli.NombreEmpresa %> - <%= cli.Pais %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                                <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="<%= fechaInicio %>">
                            </div>
                            <div class="col-md-3">
                                <label for="fechaFin" class="form-label">Fecha Fin</label>
                                <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="<%= fechaFin %>">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Resultados -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            Resultados 
                            <span class="badge bg-primary"><%= totalPedidos %> pedidos</span>
                            <span class="badge bg-success">P치gina <%= paginaActual %> de <%= totalPaginas %></span>
                        </h5>
                        <a href="/" class="btn btn-secondary">Volver al inicio</a>
                    </div>
                    <div class="card-body">
                        <% if (pedidos.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>ID Pedido</th>
                                            <th>Fecha</th>
                                            <th>Cliente</th>
                                            <th>Empresa</th>
                                            <th>Pa칤s</th>
                                            <th>Empleado</th>
                                            <th>Productos</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pedidos.forEach(pedido => { %>
                                            <tr>
                                                <td><strong>#<%= pedido.IdPedido %></strong></td>
                                                <td><%= pedido.FechaPedido %></td>
                                                <td><%= pedido.NombreContacto || 'N/A' %></td>
                                                <td><strong><%= pedido.NombreEmpresa %></strong></td>
                                                <td><span class="badge bg-info"><%= pedido.Pais %></span></td>
                                                <td><%= pedido.NombreEmpleado || 'N/A' %></td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= pedido.CantidadProductos %> productos
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong class="text-success">
                                                        S/ 
                                                        <% 
                                                            // Usar TotalCalculado si existe, sino usar Cargo
                                                            let totalMostrar = pedido.TotalCalculado !== null ? pedido.TotalCalculado : pedido.Cargo;
                                                            if (totalMostrar === null || isNaN(totalMostrar)) {
                                                                totalMostrar = 0;
                                                            }
                                                        %>
                                                        <%= parseFloat(totalMostrar).toFixed(2) %>
                                                    </strong>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" 
                                                            onclick="verDetallePedido('<%= pedido.IdPedido %>')">
                                                        Ver
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Paginaci칩n -->
                            <% if (totalPaginas > 1) { %>
                                <nav aria-label="Paginaci칩n">
                                    <ul class="pagination">
                                        <!-- Bot칩n Anterior -->
                                        <% if (paginaActual > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="<%= generarUrlPaginacion(paginaActual - 1) %>">
                                                    Anterior
                                                </a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item disabled">
                                                <span class="page-link">Anterior</span>
                                            </li>
                                        <% } %>
                                        
                                        <!-- P치ginas - Mostrar m치ximo 7 p치ginas alrededor de la actual -->
                                        <% 
                                            let inicioPagina = Math.max(1, paginaActual - 3);
                                            let finPagina = Math.min(totalPaginas, paginaActual + 3);
                                            
                                            // Ajustar si estamos cerca del inicio
                                            if (inicioPagina === 1) {
                                                finPagina = Math.min(totalPaginas, inicioPagina + 6);
                                            }
                                            
                                            // Ajustar si estamos cerca del final
                                            if (finPagina === totalPaginas) {
                                                inicioPagina = Math.max(1, finPagina - 6);
                                            }
                                        %>
                                        
                                        <!-- Primera p치gina -->
                                        <% if (inicioPagina > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="<%= generarUrlPaginacion(1) %>">1</a>
                                            </li>
                                            <% if (inicioPagina > 2) { %>
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            <% } %>
                                        <% } %>
                                        
                                        <!-- P치ginas numeradas -->
                                        <% for (let i = inicioPagina; i <= finPagina; i++) { %>
                                            <li class="page-item <%= i === paginaActual ? 'active' : '' %>">
                                                <a class="page-link" href="<%= generarUrlPaginacion(i) %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>
                                        
                                        <!-- 칔ltima p치gina -->
                                        <% if (finPagina < totalPaginas) { %>
                                            <% if (finPagina < totalPaginas - 1) { %>
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            <% } %>
                                            <li class="page-item">
                                                <a class="page-link" href="<%= generarUrlPaginacion(totalPaginas) %>">
                                                    <%= totalPaginas %>
                                                </a>
                                            </li>
                                        <% } %>
                                        
                                        <!-- Bot칩n Siguiente -->
                                        <% if (paginaActual < totalPaginas) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="<%= generarUrlPaginacion(paginaActual + 1) %>">
                                                    Siguiente
                                                </a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item disabled">
                                                <span class="page-link">Siguiente</span>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>

                        <% } else { %>
                            <div class="alert alert-info text-center">
                                <h5>No se encontraron pedidos para este cliente</h5>
                                <p>Intente seleccionar otro cliente o ajustar las fechas</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function verDetallePedido(idPedido) {
            window.open(`/detalle-pedido-completo?id=${idPedido}`, '_blank');
        }
    </script>
</body>
</html>