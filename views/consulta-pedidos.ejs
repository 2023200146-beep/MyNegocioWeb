<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Pedidos - My Negocio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-hover tbody tr:hover { background-color: #f5f5f5; }
        .badge { font-size: 0.8em; }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Consulta de Pedidos</h1>
                
                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Filtros de Búsqueda</h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                                <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="<%= fechaInicio %>">
                            </div>
                            <div class="col-md-3">
                                <label for="fechaFin" class="form-label">Fecha Fin</label>
                                <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="<%= fechaFin %>">
                            </div>
                            <div class="col-md-3">
                                <label for="empleado" class="form-label">Empleado</label>
                                <select class="form-control" id="empleado" name="empleado">
                                    <option value="">Todos los empleados</option>
                                    <% empleados.forEach(emp => { %>
                                        <option value="<%= emp.IdEmpleado %>" <%= emp.IdEmpleado == empleadoFiltro ? 'selected' : '' %>>
                                            <%= emp.Nombre %> <%= emp.Apellidos %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Resultados -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Resultados (<%= pedidos.length %> pedidos)</h5>
                        <a href="/" class="btn btn-secondary">Volver al inicio</a>
                    </div>
                    <div class="card-body">
                        <% if (pedidos.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>ID Pedido</th>
                                            <th>Fecha</th>
                                            <th>Cliente</th>
                                            <th>Empleado</th>
                                            <th>Destinatario</th>
                                            <th>Ciudad</th>
                                            <th>País</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pedidos.forEach(pedido => { %>
                                            <tr>
                                                <td><strong>#<%= pedido.IdPedido %></strong></td>
                                                <td><%= pedido.FechaPedido %></td>
                                                <td><%= pedido.NombreCliente || 'N/A' %></td>
                                                <td><%= pedido.NombreEmpleado %> <%= pedido.ApellidosEmpleado %></td>
                                                <td><%= pedido.Destinatario %></td>
                                                <td><%= pedido.CiudadDestinatario %></td>
                                                <td><span class="badge bg-info"><%= pedido.PaisDestinatario %></span></td>
                                                <td><strong>S/ <%= parseFloat(pedido.Cargo).toFixed(2) %></strong></td>
                                                <td>
                                                    <a href="/detalle-pedido-completo?id=<%= pedido.IdPedido %>" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       target="_blank">
                                                        Ver
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info text-center">
                                <h5>No se encontraron pedidos</h5>
                                <p>Intente ajustar los filtros de búsqueda</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>