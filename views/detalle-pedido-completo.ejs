<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle Completo del Pedido #<%= pedido.IdPedido %> - My Negocio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header-info { background-color: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px; }
        .total-box { background-color: #e8f5e8; padding: 15px; border-radius: 8px; }
        .table-detalle th { background-color: #343a40; color: white; }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Detalle del Pedido #<%= pedido.IdPedido %></h1>
                </div>

               
                <div class="header-info">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Información del Cliente</h4>
                            <p><strong>Empresa:</strong> <%= pedido.NombreEmpresa %></p>
                            <p><strong>Contacto:</strong> <%= pedido.NombreContacto %></p>
                            <p><strong>Dirección:</strong> <%= pedido.DireccionCliente %></p>
                            <p><strong>Ciudad:</strong> <%= pedido.CiudadCliente %></p>
                            <p><strong>País:</strong> <%= pedido.PaisCliente %></p>
                        </div>
                        <div class="col-md-6">
                            <h4>Información del Pedido</h4>
                            <p><strong>Fecha del Pedido:</strong> <%= pedido.FechaPedido %></p>
                            <p><strong>Empleado:</strong> <%= pedido.NombreEmpleado %> <%= pedido.ApellidosEmpleado %></p>
                            <p><strong>Cargo:</strong> <%= pedido.CargoEmpleado %></p>
                            <p><strong>Destinatario:</strong> <%= pedido.Destinatario %></p>
                            <p><strong>Dirección de Envío:</strong> <%= pedido.DireccionDestinatario %></p>
                            <p><strong>Ciudad:</strong> <%= pedido.CiudadDestinatario %></p>
                            <p><strong>País:</strong> <%= pedido.PaisDestinatario %></p>
                        </div>
                    </div>
                </div>

             
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Productos del Pedido</h4>
                    </div>
                    <div class="card-body">
                        <% if (detalles.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-detalle">
                                        <tr>
                                            <th>Producto</th>
                                            <th>Presentación</th>
                                            <th>Precio Unitario</th>
                                            <th>Cantidad</th>
                                            <th>Descuento</th>
                                            <th>Subtotal</th>
                                            <th>Descuento Aplicado</th>
                                            <th>Total Línea</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% detalles.forEach(detalle => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= detalle.NombreProducto %></strong>
                                                    <br><small class="text-muted">ID: <%= detalle.IdProducto %></small>
                                                </td>
                                                <td><%= detalle.CantidadPorUnidad %></td>
                                                <td>S/ <%= parseFloat(detalle.PrecioUnidad || 0).toFixed(2) %></td>
                                                <td><%= detalle.Cantidad %></td>
                                                <td>
                                                    <% if (detalle.Descuento && detalle.Descuento > 0) { %>
                                                        <span class="badge bg-warning">
                                                            <%= (detalle.Descuento * 100).toFixed(0) %>%
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">0%</span>
                                                    <% } %>
                                                </td>
                                                <td>S/ <%= parseFloat(detalle.Subtotal || 0).toFixed(2) %></td>
                                                <td>
                                                    <% if (detalle.MontoDescuento && detalle.MontoDescuento > 0) { %>
                                                        <span class="text-danger">-S/ <%= parseFloat(detalle.MontoDescuento || 0).toFixed(2) %></span>
                                                    <% } else { %>
                                                        S/ 0.00
                                                    <% } %>
                                                </td>
                                                <td><strong>S/ <%= parseFloat(detalle.TotalLinea || 0).toFixed(2) %></strong></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Totales -->
                            <div class="row mt-4">
                                <div class="col-md-6 offset-md-6">
                                    <div class="total-box">
                                        <h5>Resumen de Totales</h5>
                                        <table class="table table-borderless">
                                            <tr>
                                                <td><strong>Subtotal:</strong></td>
                                                <td class="text-end">S/ <%= parseFloat(totales.subtotal).toFixed(2) %></td>
                                            </tr>
                                            <tr>
                                                <td><strong>Descuento Total:</strong></td>
                                                <td class="text-end text-danger">-S/ <%= parseFloat(totales.descuento).toFixed(2) %></td>
                                            </tr>
                                            <tr class="table-active">
                                                <td><strong>TOTAL DEL PEDIDO:</strong></td>
                                                <td class="text-end"><strong>S/ <%= parseFloat(totales.total).toFixed(2) %></strong></td>
                                            </tr>
                                            <% if (pedido.Cargo && pedido.Cargo > 0) { %>
                                                <tr>
                                                    <td><strong>Total en BD (Cargo):</strong></td>
                                                    <td class="text-end">S/ <%= parseFloat(pedido.Cargo).toFixed(2) %></td>
                                                </tr>
                                            <% } %>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="alert alert-warning text-center">
                                <h5>No se encontraron productos en este pedido</h5>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 text-center">
                    <button class="btn btn-primary" onclick="window.close()">Cerrar Ventana</button>
                    <a href="/consulta-pedidos-cliente" class="btn btn-secondary">Volver a Consultas</a>
                    <a href="/" class="btn btn-info">Ir al inicio</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
 
</body>
</html>