<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del Pedido - My Negocio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .card { margin-bottom: 20px; }
        .table-responsive { margin: 15px 0; }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Detalle del Pedido</h1>
        
      
        <div class="row">
       
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Información del Empleado</h5>
                    </div>
                    <div class="card-body">
                        <% if (empleado) { %>
                            <p><strong>Nombre:</strong> <%= empleado.Nombre %> <%= empleado.Apellidos %></p>
                            <p><strong>Cargo:</strong> <%= empleado.Cargo %></p>
                            <p><strong>ID Empleado:</strong> <%= empleado.IdEmpleado %></p>
                        <% } else { %>
                            <p class="text-danger">No hay información del empleado</p>
                        <% } %>
                    </div>
                </div>
            </div>
            
           
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Información del Cliente</h5>
                    </div>
                    <div class="card-body">
                        <% if (cliente) { %>
                            <p><strong>Empresa:</strong> <%= cliente.NombreEmpresa %></p>
                            <p><strong>Contacto:</strong> <%= cliente.NombreContacto %></p>
                            <p><strong>País:</strong> <%= cliente.Pais %></p>
                            <p><strong>Ciudad:</strong> <%= cliente.Ciudad %></p>
                            <p><strong>ID Cliente:</strong> <%= cliente.IdCliente %></p>
                        <% } else { %>
                            <p class="text-danger">No hay información del cliente</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Información del Pedido</h5>
            </div>
            <div class="card-body">
                <p><strong>Fecha del Pedido:</strong> <%= fecha %></p>
                <p><strong>Total del Pedido:</strong> S/ <%= totales.totalVta %></p>
            </div>
        </div>

        
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Productos en el Pedido</h5>
            </div>
            <div class="card-body">
                <% if (pedido && pedido.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th>Presentación</th>
                                    <th>Precio Unitario</th>
                                    <th>Cantidad</th>
                                    <th>Importe Compra</th>
                                    <th>Descuento</th>
                                    <th>Importe Venta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pedido.forEach(item => { %>
                                    <tr>
                                        <td><%= item.producto %></td>
                                        <td><%= item.presentacion %></td>
                                        <td>S/ <%= item.precio.toFixed(2) %></td>
                                        <td><%= item.cantidad %></td>
                                        <td>S/ <%= item.impComp.toFixed(2) %></td>
                                        <td>
                                            <% if (item.descuentoFloat && item.descuentoFloat > 0) { %>
                                                <span class="badge bg-warning">
                                                    <%= (item.descuentoFloat * 100).toFixed(0) %>%
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">0%</span>
                                            <% } %>
                                        </td>
                                        <td>S/ <%= item.impVta.toFixed(2) %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                            <tfoot class="table-primary">
                                <tr>
                                    <td colspan="4" class="text-end"><strong>TOTALES:</strong></td>
                                    <td><strong>S/ <%= totales.totalComp %></strong></td>
                                    <td><strong>S/ <%= totales.totalDscto %></strong></td>
                                    <td><strong>S/ <%= totales.totalVta %></strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    
                    <div class="d-flex gap-2 mt-3">
                        <button type="button" class="btn btn-success" onclick="guardarPedido()">
                            Guardar Pedido en BD
                        </button>
                        <button type="button" class="btn btn-danger" onclick="cancelarPedido()">
                            Cancelar Pedido
                        </button>
                        <a href="/" class="btn btn-secondary">← Volver al Catálogo</a>
                    </div>

                <% } else { %>
                    <div class="alert alert-info text-center">
                        <h5>No hay productos en el pedido</h5>
                        <a href="/" class="btn btn-primary mt-2">Volver al Catálogo</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
     
        async function guardarPedido() {
            if (!confirm('¿Está seguro de que desea guardar este pedido en la base de datos?')) {
                return;
            }

            try {
                const empleado = '<%= empleado.IdEmpleado %>';
                const cliente = '<%= cliente.IdCliente %>';
                const fecha = '<%= fecha %>';

                const response = await fetch('/guardar-pedido', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        idEmpleado: empleado,
                        idCliente: cliente,
                        fechaPedido: fecha
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert(`Pedido guardado correctamente\nNúmero de Pedido: ${result.pedidoId}`);
                    window.location.href = '/';
                } else {
                    alert('Error al guardar pedido: ' + result.error);
                }
            } catch (error) {
                console.error('Error:', error);
                alert(' Error al guardar pedido: ' + error.message);
            }
        }

    
        function cancelarPedido() {
            if (confirm('¿Está seguro de que desea cancelar este pedido? Se perderán todos los datos.')) {
                window.location.href = '/';
            }
        }
    </script>
</body>
</html>